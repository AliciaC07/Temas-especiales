<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

    <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn_load"
            android:layout_marginEnd="16dp"/>
    <Button
            android:id="@+id/btn_load"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/load"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn_add" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_clear"
            app:layout_constraintTop_toBottomOf="@+id/txt_id" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="16dp"/>
    <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn_load" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/txt_id" app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_message"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="Name"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_lastname"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/txt_message"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="LastName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_id"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/txt_lastname"
            android:layout_marginTop="32dp" android:hint="ID"/>
</androidx.constraintlayout.widget.ConstraintLayout>