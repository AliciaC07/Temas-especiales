<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="10dp"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardCornerRadius="8dp"
                                   android:minHeight="100dp"
                                   app:cardElevation="6dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="63dp" android:id="@+id/txt_name"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp" android:layout_marginEnd="16dp" android:textSize="20sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="60dp" android:id="@+id/txt_descrip"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_name" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:textSize="20sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="60dp" android:id="@+id/txt_cost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:textSize="20sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_descrip"/>
            <Button
                    android:text="X"
                    android:layout_width="122dp"
                    android:layout_height="48dp" android:id="@+id/delete"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="64dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_cost"
                    android:layout_marginTop="24dp"/>
            <Button
                    android:text="Link"
                    android:layout_width="140dp"
                    android:layout_height="48dp" android:id="@+id/share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/delete" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_cost"
                    android:layout_marginTop="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout
        >
    </LinearLayout>
</androidx.cardview.widget.CardView>