<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddProduct">

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_txt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:hint="Articulo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/descri_txt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/name_txt"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:hint="Descripcion"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/cost"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/descri_txt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:hint="costo"/>
    <Button
            android:text="x"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/clean_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/cost"
            android:layout_marginTop="132dp" android:layout_marginStart="52dp"
            app:layout_constraintEnd_toStartOf="@+id/add_btn" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="61dp" android:id="@+id/add_btn"
            android:layout_marginTop="132dp"
            app:layout_constraintTop_toBottomOf="@+id/cost"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/clean_btn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/volver"/>
    <Button
            android:text="Volver"
            android:layout_width="0dp"
            android:layout_height="63dp" android:id="@+id/volver"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" app:layout_constraintTop_toBottomOf="@+id/cost"
            app:layout_constraintStart_toEndOf="@+id/add_btn" android:layout_marginTop="132dp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>